{% block sw_plugin_card %}
    <div class="sw-plugin-card">
        <sw-container justify="left" align="start">
            <img :src="plugin.iconPath" class="sw-plugin-card__icon"/>
            <div class="sw-plugin-card__info">
                <div class="sw-plugin-card__label">{{ plugin.label }}</div>
                <div class="sw-plugin-card__manufacturer">{{ plugin.manufacturer }}</div>
                <div v-if="showDescription" class="sw-plugin-card__short-description">{{ plugin.shortDescription | truncate(140) }}</div>

                <div v-if="pluginIsNotActive" class="bottom">
                    <sw-help-text
                        :hideDelay="1000"
                        :text="$t('heptacom.administration-without-plugin-manager.plugin-list.helpText')"
                        :width="500"
                        tooltipPosition="top"
                    ></sw-help-text>
                </div>
                <div v-else class="plugin-status">
                    <span class="plugin-installed">
                        <sw-icon name="small-default-checkmark-circle" size="16"></sw-icon>
                        {{ $tc('sw-first-run-wizard.general.pluginInstalled') }}
                    </span>
                </div>
            </div>
        </sw-container>
    </div>
{% endblock %}
